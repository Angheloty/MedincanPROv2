<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActualizarMedicamneto">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FD149EAF"
        android:text="Actualizacion de  Medicamento"
        android:textAlignment="center"
        android:textColor="#123253"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="71dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="415dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="Nombre  Medicemto"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtnombreMEcicamentoO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ingrese la cantidad de tabletas tomar por dia el Paciente"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtCantidadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="ingrece las horas que tiene que tomar el medicmento"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txthorayminutoo"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnRelogF"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="#298FA8"
            android:text="relog"
            android:textColor="#E4DBDB" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtMEnsajee"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:textAlignment="center"
            android:textColor="#124F70"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnActualizarMedicamento"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="#11CCA7"
            android:text="Actualizar"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>